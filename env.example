# Yral AI Chat API - Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=Your App Name
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database (SQLite with Litestream)
# ===========================================
DATABASE_PATH=data/your_db.db

# ===========================================
# JWT Authentication
# ===========================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET_KEY=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_ISSUER=your_issuer

# ===========================================
# Google Gemini API
# ===========================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# ===========================================
# Media Storage
# ===========================================
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=20
MAX_AUDIO_DURATION_SECONDS=300

# ===========================================
# S3 Media Upload (Required)
# Using Storj (S3-compatible)
# ===========================================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us1
S3_ENDPOINT_URL=https://your-s3-endpoint.com
S3_PUBLIC_URL_BASE=https://your-public-url.com

# Expiration (in seconds) for generated presigned URLs
S3_URL_EXPIRES_SECONDS=3600

# ===========================================
# Whisper API (Optional)
# ===========================================
USE_WHISPER=false
WHISPER_API_KEY=your-whisper-key

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS=https://your-domain.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=300
RATE_LIMIT_PER_HOUR=5000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Sentry Error Tracking & Performance Monitoring
# ===========================================
SENTRY_DSN=https://your-sentry-dsn.com
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# ===========================================
# Litestream Configuration
# ===========================================
LITESTREAM_ACCESS_KEY_ID=your-litestream-access-key
LITESTREAM_SECRET_ACCESS_KEY=your-litestream-secret-key
LITESTREAM_BUCKET=your-backup-bucket
LITESTREAM_ENDPOINT=https://your-backup-endpoint.com
LITESTREAM_REGION=us1

# ===========================================
# Beszel Monitoring
# ===========================================
BESZEL_LISTEN_PORT=45876
BESZEL_KEY=your-beszel-public-key
# Use a unique token per system
BESZEL_TOKEN=your-beszel-token
BESZEL_HUB_URL=https://your-beszel-hub.com

# ===========================================
# Uptime Kuma Monitoring
# ===========================================
# URL from your Push monitor in Uptime Kuma
UPTIME_KUMA_PUSH_URL=https://kuma.yral.com/api/push/YOUR_TOKEN
# URL for direct Google Chat notifications
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/...
# Static token for Uptime Kuma to bypass JWT authentication
MONITORING_TOKEN=your-unique-static-monitoring-token
